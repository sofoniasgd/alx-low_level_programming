# makefile

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm

all: ${NAME}

%.o:%.c 
	${CC} -c -o $@ $<

${NAME}: ${OBJ}
	${CC} ${OBJ} -o $@

oclean:
	${RM} -f ${OBJ}
clean:
	# remove editor backup files
	${RM} -f \#*\#
	${RM} -f .*.swp
	# remove executable
	${RM} -f ${NAME}
fclean: oclean clean
re: oclean clean all
