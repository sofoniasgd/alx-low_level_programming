# makefile

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm

all: ${NAME} m.h

%.o:%.c 
	${CC} -Wall -Werror -Wextra -pedantic -c -o $@ $<

${NAME}: ${OBJ}
	${CC} ${OBJ} -o $@

oclean:
	${RM} ${OBJ}

clean:
	${RM} *~ ${NAME}

fclean: oclean clean

re: fclean all

#make rule
