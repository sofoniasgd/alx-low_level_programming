# makefile

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME =school
RM = rm
TMPF = #*# .*.swp

all: ${NAME}

%.o:%.c 
	${CC} -Wall -Werror -Wextra -pedantic -c -o $@ $<

${NAME}: ${OBJ}
	${CC} ${OBJ} -o $@

oclean:
	${RM} -f ${OBJ}

clean: ${TMPF} ${NAME}
	${RM} -f $^

fclean: oclean clean

re: fclean all

#make rule
